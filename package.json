{
  "name": "isometrics-app",
  "version": "0.0.0",
  "description": "Isometric technical drawing application",
  "author": "Zauner GmbH",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "dev": "ng serve --hmr --poll=2000",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:isometrics-app": "node dist/isometrics-app/server/server.mjs",
    "electron": "npm run build:prod && electron electron/src/main.js",
    "electron:dev": "NODE_ENV=development electron electron/src/main.js",
    "build:prod": "ng build --configuration=production --base-href ./",
    "build:electron": "npm run build:prod && electron-builder --config electron/electron-builder.json",
    "build:win": "npm run build:prod && electron-builder --config electron/electron-builder.json --win",
    "build:win-portable": "npm run build:prod && electron-builder --config electron/electron-builder.json --win portable",
    "dist": "npm run build:win"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.1.0",
    "@angular/compiler": "^20.1.0",
    "@angular/core": "^20.1.0",
    "@angular/forms": "^20.1.0",
    "@angular/platform-browser": "^20.1.0",
    "@angular/platform-server": "^20.1.0",
    "@angular/router": "^20.1.0",
    "@angular/ssr": "^20.1.1",
    "express": "^5.1.0",
    "fabric": "^6.7.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "^0.15.1"
  },
  "devDependencies": {
    "@angular/build": "^20.1.1",
    "@angular/cli": "^20.1.1",
    "@angular/compiler-cli": "^20.1.0",
    "@types/express": "^5.0.1",
    "@types/fabric": "^5.3.10",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^20.17.19",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.8.2"
  }
}
